/*  Cart  */


.body-wrap{
  background-color: white;
  overflow: scroll;
}



.dim .js-main {
  opacity: .4 !important;

}

.my-cart{
  position: fixed;
  right: -1000px;
  top: 20px;
  cursor: pointer;
  width: calc( 450px  );
  height: calc( var(--winHeight) - 60px);
  transition: ease all 0.3s ;
  overflow: hidden;
  opacity: 0;

}


 
.cart-open{

  overflow: scroll;
  transition: right 0.3s;
  right: 20px;
  
  opacity: 1; 


 
}

@media only screen and (max-width: 768px) {

  .my-cart{
    position: fixed;
    right: 0px;
    top: 100%;
    left: 0px;
    cursor: pointer;
    width: calc( 100vw  );
    height: calc(var(--winHeight) );
    overflow: hidden;
    transition: top 0.3s;
   
  }

    
  .cart-open{

    width: calc( 100vw  );
    height: calc(var(--winHeight) - 20px );
    overflow: scroll;
    right: 0px;
    top: 20px;
 
  }
}


ajax-cart-product-form[processing]:before {
  content: 'Updating';
  padding: 20px;
  background-color: red;
  border-radius: 20px;
  position: absolute;
  top: 20px;
}

/* Make the "Add to cart" button look visually disabled while loading */
ajax-cart-product-form[processing] [type="submit"] {
  opacity: .7;
  cursor: not-allowed;
  pointer-events: none;
}

.my-cart__items {
  opacity: 1;
  transition: opacity .2s;
}

/* Make the cart content look visually disabled while updating */
html.js-ajax-cart-processing .my-cart__items {
  opacity: .7;
}

/* Show a loading indicator */
html.js-ajax-cart-processing .my-cart__items:before {
  content: 'LOADING';
 position: absolute;
  inset:0px;
  display: flex;
  justify-content: center;
  align-items: center;
  
  padding: 10px 20px;
  background-color: rgba(251, 255, 0, 0.6);
  margin: 0 auto;

  inset: 0;
