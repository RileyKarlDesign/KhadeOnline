<div
  style="background:{{section.settings.color}}"
  class=" js-section grid md:h-screen h-fit bg-opacity-50 md:grid-cols-2 grid-cols-1 md:gap-2 "
>
  <div class="w-full md:row-start-1  row-start-2  ">
    <div class="h-full md:p-4 md:pt-2 p-2   pt-0 ">
      <div class="w-80 h-80 overflow-hidden md:p-[0px] md:pr-4  p-2">
        {{ section.settings.image2 | image_url: width: 1204 | image_tag: class: ' object-cover  js-fade' }}
      </div>

      <h3 class="md:w-[350px]   ">
        {{ section.settings.body }}
      </h3>

      {% if section.settings.product_1 != '' %}
        <p>{{ section.settings.product_1.title }}</p>
      {% endif %}
    </div>
  </div>
  <div class="w-full h-full overflow-hidden md:p-[0px] md:pr-4  p-2">
    {{ section.settings.image1 | image_url: width: 1204 | image_tag: class: ' object-cover  js-fade' }}
  </div>
</div>

{% schema %}
{
  "name": "Product Display",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Large Image"
    },

    {
      "type": "image_picker",
      "id": "image2",
      "label": "Small Image"
    },

    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "body",
      "label": "Body Text"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "Call To Action"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Colour"
    }
  ],

  "presets": [
    {
      "name": "Product Display ",
      "category": "Content"
    }
  ]
}
{% endschema %}
