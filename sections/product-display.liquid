<div
  class="
    lg:h-[130vh] js-section relative lg:flex  {% if section.settings.reverse %} lg:flex-row-reverse {% endif %}  pointer-events-none   bg-opacity-50
    md:h-[70vh] md:flex md:flex-row
    sm:flex-col
    h-fit
  "
>
  <div class="w-full ">
    <div
      class="
        SMALL IMAGE
        lg:h-[100vh]
        md:h-[70vh]  md:pt-2 p-2
        pt-0  flex items-center justify-center sticky top-0
      "
    >
      <div class="w-80  overflow-hidden md:p-[0px] md:pr-4  p-2">
        <a href="{{ section.settings.product_1.url }}" class="pointer-events-auto">
          {{
            section.settings.image2
            | image_url: width: 1204
            | image_tag: class: ' object-cover  js-fade  pointer-events-none md:h-full '
          }}
        </a>
      </div>

      {% if section.settings.product_1 != '' %}
        <div class="absolute bottom-4 left-2 ">
          <p>{{ section.settings.product_1.title }}</p>
          <p>{{ section.settings.product_1.price | money }}</p>
        </div>
      {% endif %}
    </div>
  </div>

  <div class="w-full h-full  p-0 overflow-hidden   ">
    <a href="{{section.settings.product_1.url}}">
      {{ section.settings.image1 | image_url: width: 1204 | image_tag: class: 'object-cover md:h-full  js-fade ' }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Product Display",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Large Image"
    },

    {
      "type": "image_picker",
      "id": "image2",
      "label": "Small Image"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Product"
    },
    {
      "type": "checkbox",
      "id": "reverse",
      "label": "Reverse"
    }
  ],

  "presets": [
    {
      "name": "Product Display ",
      "category": "Content"
    }
  ]
}
{% endschema %}
