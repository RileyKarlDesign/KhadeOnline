<div class=" md:flex gap-1 p-2 ">
  <div class="pt-40 sticky top-0">
    <div class="subheader-title border-t-[1px] border-stroke-1">
      <p>Cart</p>
    </div>
  </div>

  <div class=" mt-40 w-[350px] ">
    {% if cart.item_count > 0 %}
      {% for item in cart.items %}
        {% render 'cart-card' with {product: item} %}
      {% endfor %}
      <tr class="subtotal">
        <div colspan="5">
          Total: <strong>{{ cart.total_price | money }}</strong>
        </div>
      </tr>
      <tr class="actions">
        <div colspan="5">
          <input class="button" type="submit" id="update-cart" name="update" value="Update">
          <input class="button" type="submit" name="checkout" value="Checkout">
        </div>
      </tr>
      </div>
      </form>
    {% else %}
      <p>Your cart is empty!</p>
    {% endif %}
  </div>
</div>
