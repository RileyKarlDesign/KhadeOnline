<div class="p-2  flex md:flex-row flex-col  gap-1  relative  ">
  <div class="  pt-40 md:sticky md:top-0   ">
    <div class="border-t-[1px] border-stroke-1 pt-[5px]  subheader-title ">
      {%- for link in linklists.info.links -%}
        <h3 class=" select-none  ">
          <a
            class=" hover:opacity-50 {%- if request.path == link.url -%}f opacity-50 hover:opacity-50 {%- endif -%}"
            href="{{ link.url }}"
          >
            {{- link.title -}}
          </a>
        </h3>
      {%- endfor -%}
    </div>
  </div>

  <div class=" md:w-[350px]  pt-40  ">
    <div class="flex border-t-[1px] border-stroke-1 pt-[9px] ">
      <h2 class="pb-1">{{ page.title }}</h2>
    </div>
    <div class=" full ">
      {{ page.content }}
    </div>
  </div>
</div>
