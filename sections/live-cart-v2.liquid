<div
  class="js-cart-bg  bg-opacity-25 fixed top-0 right-0 left-0 bottom-0 pointer-events-none  z-50 "
></div>
<div class="cart-wrap p-2 pt-0 z-[2000] text-surface-1 w-full flex gap-1">
  <div class="subheader-title border-t-[1px] border-surface-1 pt-[5px]">
    <p>Cart ({{ cart.item_count }})</p>
  </div>
  <div class="my-cart  " data-ajax-cart-section>
    <div class="my-cart__items w-[350px]" data-ajax-cart-section-scroll>
      <!-- Loop through cart items -->
      {% for line_item in cart.items %}
        {% assign line_item_index = forloop.index %}
        {% render 'cart-card' with { product: line_item , index: line_item_index } %}
      {% endfor %}

      <div class=" cart-footer flex gap-2 justify-center align-middle absolute left-0 right-0 bottom-2    "></div>
      {% form 'cart', cart, id: 'my-ajax-cart-form' %}
        <button
          class=" px-20 flex w-full h-el justify-center items-center bg-black bg-opacity-80 text-white hover:bg-opacity-5 hover:text-black rounded-sm  backdrop-blur-lg "
          type="submit"
          name="checkout"
        >
          <h3>Checkout â€” {{ cart.total_price | money_with_currency }}</h3>
        </button>
      {% endform %}
    </div>
  </div>

  <div class="  w-full  flex justify-end  ">
    <p class="cart-btn text-link border-t-[1px] border-surface-1 pt-[5px]">Close</p>
  </div>
</div>

{% schema %} { "name": "My Ajax cart" } {% endschema %}
