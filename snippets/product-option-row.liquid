<!-- option -->

<div class="product-option-row product-option-row-option grid  grid-cols-2 ">
  <label class=" h-3 flex items-center" for="{% if type == 'select' %}select-{{ option.name}}{% endif %}">
    here
    <p>{{ option.name }}</p>
  </label>

  <div class="option-values flex gap-1">
    {% comment %}  option 1  {% endcomment %}

    {% assign e = '' %}
    {%- assign optionTwoArray = '' %}
    {% for variant in product.variants %}
      {% for value in option.values %}
        {% if value == variant.option1 %}
          {% if e != value %}
            {% assign radio_id = 'option-' | append: option_name | append: '-' | append: value | handleize %}

            <div class="product-option    flex h- items-center ">
              <div>
                <input
                  class="variant-radio"
                  {% if forloop.index == 1 and variant.inventory_quantity > 0 %}
                    checked="checked"
                  {% endif %}
                  {% if variant.inventory_quantity <= 0 %}
                    disabled
                  {% endif %}
                  type="radio"
                  id="{{radio_id}}"
                  name="{{ option_name }}"
                  value="{{ value }}"
                  {% if value == selected %}
                    checked
                  {% endif %}
                >
                <label for="{{radio_id}}">
                  {{ value -}}
                  {{- variant.inventory_quantity }}
                </label>
              </div>
            </div>

            {% assign e = value %}
          {% endif %}
        {% endif %}

        {% comment %}
          option2 & option1 is deprecated and needs to be replaced with option[1]
        {% endcomment %}

        {% if value == variant.option2 %}
          {% if e != value %}
            {% assign radio_id = 'option-' | append: option_name | append: '-' | append: value | handleize %}

            <div class="product-option    flex h- items-center ">
              <div>
                <input
                  class="variant-radio"
                  {% if forloop.index == 1 and variant.inventory_quantity > 0 %}
                    checked="checked"
                  {% endif %}
                  {% if variant.inventory_quantity <= 0 %}
                    disabled
                  {% endif %}
                  type="radio"
                  id="{{radio_id}}"
                  name="{{ option_name }}"
                  value="{{ value }}"
                  {% if value == selected %}
                    checked
                  {% endif %}
                >
                <label for="{{radio_id}}">
                  {{ value -}}
                  {{- variant.inventory_quantity }}
                </label>
              </div>
            </div>

            {% assign e = value %}
          {% endif %}
        {% endif %}
      {% endfor %}
    {% endfor %}
  </div>
</div>
