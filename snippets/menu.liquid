<div class="js-menu fixed top-0 right-0 left-0 bottom-0 z-40 transition-all    ">
  <div class="menu-top absolute md:top-[20px]  top-0  md:right-[20px] pointer-events-auto  md:h-fit bottom-0  rounded-lg md:pt-[1px] md:w-[386px]  md:p-1 p-2 pt-[10px]  w-full  ">
    <div class="menu-content transition-all pt-3 ">
      <div class="links transition-all grid grid-cols-2 ">
        {%- for link in linklists['main-menu'].links -%}
          <h1 class=" select-none ">
            <a
              class=" hover:opacity-50  {%- if request.path == link.url -%}f opacity-50 hover:opacity-50 {%- endif -%}"
              href="{{ link.url }}"
            >
              {{- link.title -}}
            </a>
          </h1>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
