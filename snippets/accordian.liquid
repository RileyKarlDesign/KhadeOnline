{% if title == 'Sizing' %}
  <div class=" accordian  " data-state="true">
    <div class="accordian-title grid grid-cols-2 bg-opacity-5 rounded-sm cursor-pointer hover:opacity-50   w-full  ">
      <p class="    pointer-events-none w-full ">{{ title }}</p>
      <p class="w-full accordian-symbol">+</p>
    </div>

    <div class="accordian-content pl-0  ">
      <a href="{{content | file_url }}" download> Download </a>
    </div>
  </div>

{% else %}
  <div class=" accordian  " data-state="true">
    <div class="accordian-title grid grid-cols-2 bg-opacity-5 rounded-sm cursor-pointer hover:opacity-50   w-full  ">
      <p class="    pointer-events-none w-full ">{{ title }}</p>
      <p class="w-full accordian-symbol">+</p>
    </div>

    <div class="accordian-content pl-0  ">
      <p class="">{{ content }}</p>
    </div>
  </div>
{% endif %}
