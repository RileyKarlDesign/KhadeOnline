<div class="  group flex flex-col  relative pb-8  ">
  <a href="{{ article.url }}">
    <div class="js-article-card pointer-events-none bg-black bg-opacity-5  relative overflow-hidden">
      <div class=" pointer-events-none  h-fit rounded-sm  bg-opacity-50 overflow-hidden ">
        {{ article.image | image_url: width: 700 | image_tag }}
      </div>
    </div>
    <div class=" pt-1 pointer-events-none ">
      <p>{{ article.title }}</p>
    </div>
  </a>
</div>
