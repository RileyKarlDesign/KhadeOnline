<div class="  z-50  w-full">
  <div class=" z-20 md:fixed  absolute  left-0 right-0 pointer-events-none flex justify-center items-center ">
    {% if template contains 'product' %}
      <div class=" hidden  md:z-50  z-20 xl:w-[27vh] lg:w-[22vw] md:w-[20vw]  w-50 md:mt-0 mt-10 aspect-square w-full md:pt-0 pt-[20vw]  md:visible invisible   ">
        <a class=" pointer-events-auto" href="/">
          {{ shop.brand.logo | image_url: width: 700 | image_tag: class: 'pointer-events-none' }}
        </a>
      </div>

    {% else %}
      <div class="  flex items-center justify-center md:items-start xl:w-[27vh] lg:w-[16vw] md:w-[18vw] z-20   w-50 md:mt-0  aspect-square w-full md:pt-0     ">
        <a class=" pointer-events-auto" href="/">
          {{ shop.brand.logo | image_url: width: 700 | image_tag: class: 'pointer-events-none' }}
        </a>
      </div>
    {% endif %}
  </div>

  <div class="w-full fixed  menu-link flex justify-end md:p-4 p-2 pb-0 z-50 pointer-events-none ">
    <div class="flex h-[20px] pointer-events-auto justify-between col-start-4 md:w-[350px] sm:w-full w-full  ">
      <div class=" flex h-fit  ">
        <h3 class=" hover:opacity-50 menu-btn cursor-pointer hightlight select-none w-[70px] h-fit  ">Menu</h3>
        <h3 class=" hover:opacity-50 cursor-pointer hightlight select-none h-fit ">
          <a href="/collections ">Shop </a>
        </h3>
      </div>
      <div class="cart-btn cursor-pointer  h-6 w-fit rounded-full select-none">
        <h3 class="hover:opacity-50">
          Cart (
          <span data-ajax-cart-bind="item_count" class="header__cart-quantity">
            {{ cart.item_count }}
          </span>
          )
        </h3>
      </div>
    </div>
  </div>
</div>

{% render 'menu' %}
