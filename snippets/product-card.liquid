<div class="  group flex flex-col  relative pb-8  ">
  <a href="{{ product.url }}">
    <div class="js-product-card pointer-events-none bg-black bg-opacity-5  relative overflow-hidden">
      <div class=" pointer-events-none group-hover:opacity-0  h-fit rounded-sm  bg-opacity-50 overflow-hidden ">
        {% if nofade %}
          {{ product.featured_image | image_url: width: 700 | image_tag: class: 'w-full no-fade' }}
        {% else %}
          {{ product.featured_image | image_url: width: 700 | image_tag: class: 'w-full js-fade' }}
        {% endif %}
      </div>

      <div class=" pointer-events-none absolute inset-0 opacity-0 group-hover:opacity-100 ">
        {{ product.images[1] | image_url: width: 400 | image_tag: class: ' js-fade' }}
      </div>
    </div>
    <div class=" pt-1 pointer-events-none ">
      <p>{{ product.title }}</p>
      <p>{{ product.metafields.custom.range }}</p>

      <div class="flex gap-2">
        <p class="opacity-50 ">{{ product.price | money }}</p>
        <p class="opacity-50 animate-blink ">{{ product.compare_at_price | money_with_currency }}</p>
      </div>
    </div>
  </a>
</div>
