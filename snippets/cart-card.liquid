<div class="flex flex-col  relative  ">
  {% comment %}  Image {% endcomment %}
  <a href="{{ product.url }}">
    <div class="featuredProductImage h-fit rounded-sm overflow-hidden ">
      {{ product.image | image_url: width: 700 | image_tag }}
    </div>

    <!-- Item error messages -->
    <div class="w-full p-2  absolute bottom-0 left-0 right-0">
      <div
        class=" caption bg-orange-400 flex justify-center items-center rounded-md z-30  "
        data-ajax-cart-errors="{{ product.key }}"
      ></div>
    </div>
  </a>
  {% comment %}  info start  {% endcomment %}
  <div class="pb-6 pt-1 flex justify-between w-full  ">
    <div class="price">
      <p>{{ product.title }}</p>
      <p class="opacity-50 ">{{ product.price | money }}</p>
    </div>

    <div class="quanity">
      <ajax-cart-quantity>
        <div class="flex w-fit items-center justify-center">
          <!-- "Minus one" button -->
          <a
            data-ajax-cart-quantity-minus
            class="  hover:bg-stone-800 hover:text-white text-bold h-2 w-2 pb-[2px] bg-stone-500 bg-opacity-10 flex justify-center items-center text-center rounded-full backdrop-blur-md "
            href="{{ routes.cart_change_url }}?line={{ index }}&quantity={{ product.quantity | minus: 1 }}"
          >
            -
          </a>

          <!-- Item quantity input -->
          <input
            data-ajax-cart-quantity-input="{{ index }}"
            name="updates[]"
            value="{{ product.quantity }}"
            type="number"
            form="my-ajax-cart-form"
            class=" bg-transparent w-10 text-center  pointer-events-none "
          >

          <!-- "Plus one" button -->
          <a
            data-ajax-cart-quantity-plus
            class=" hover:bg-stone-800 hover:text-white text-bold h-2 w-2 pb-[2px]  bg-stone-500 bg-opacity-10 flex justify-center items-center text-center rounded-full backdrop-blur-md "
            href="{{ routes.cart_change_url }}?line={{ index }}&quantity={{ product.quantity | plus: 1 }}"
          >
            +
          </a>
        </div>

        <!-- "Remove item" button -->
        <a class=" leading-none mt-4 " data-ajax-cart-request-button href="{{ product.url_to_remove }}">
          <div class=" bg-white bg-opacity-50 w-8 h-8 rounded-full  backdrop-blur-lg  absolute top-1 right-1 flex  justify-center items-center pt-[7px]">
            <p class="text-[30px] leading-none  ">ËŸ</p>
          </div>
        </a>
      </ajax-cart-quantity>
    </div>
  </div>
</div>
