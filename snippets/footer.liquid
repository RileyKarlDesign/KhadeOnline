<div class="js-footer flex flex-col gap-2  w-full  pt-40 ">
  <div class="adress grid grid-cols-[200px_minmax(900px,_1fr)_100px] pt-[5px] border-t-[1px] border-stroke-1">
    <p class="mb-1">Adress</p>
    <div class=" adress-info bottom h-fit w-fit">
      <h3>
        Khade Studio <br>
        167b Brick Lane <br>
        London E27EE
      </h3>
    </div>
  </div>

  <div class="links grid grid-cols-[200px_minmax(900px,_1fr)_100px]   pt-[5px] border-t-[1px] border-stroke-1 ">
    <p class="mb-1">Sub Pages</p>
    <div class="subpage-links">
      {%- for link in linklists.footer.links -%}
        <div class="text-link flex justify-center items-center  w-fit md:h-fit ">
          <p class=" select-none  ">
            <a
              class=" hover:opacity-50  {%- if request.path == link.url -%}f opacity-50 hover:opacity-50 {%- endif -%}"
              href="{{ link.url }}"
            >
              {{- link.title -}}
            </a>
          </p>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <div class="social info grid grid-cols-[200px_minmax(900px,_1fr)_100px] pt-[5px] border-t-[1px] border-stroke-1 ">
    <p class="mb-1">Social</p>

    <div class="social-links">
      {%- for link in linklists.social.links -%}
        <div class="text-link flex   md:h-fit ">
          <p class=" select-none  ">
            <a
              class=" hover:opacity-50  {%- if request.path == link.url -%}f opacity-50 hover:opacity-50 {%- endif -%}"
              href="{{ link.url }}"
              target="_blank"
            >
              {{- link.title -}}
            </a>
          </p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

